<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="num_tip_common_style">
        <item name="android:textColor">#fefefe</item>
        <item name="android:textSize">10sp</item>
        <item name="android:minHeight">20dp</item>
        <item name="android:minWidth">20dp</item>
        <item name="android:background">@drawable/num_bg_ico</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="table_item_title" parent="@style/table_item_text_base">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#3e3e3e</item>
        <item name="android:lineSpacingExtra">3dp</item>
        <item name="android:gravity">center_vertical|left</item>
    </style>

    <style name="table_item_grid_title" parent="@style/table_item_text_base">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#3e3e3e</item>
        <item name="android:lineSpacingExtra">3dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="table_item_grid_title_small">
        <item name="android:minHeight">25dp</item>
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">#6e6e6e</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="table_item_group" parent="@style/table_item_text_base">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#3e3e3e</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:gravity">center_vertical|left</item>
    </style>

    <style name="table_item_name" parent="@style/table_item_text_base">
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">6dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#6e6e6e</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:minHeight">32dp</item>
    </style>

    <style name="table_item_value" parent="@style/table_item_text_base">
        <item name="android:paddingRight">12dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#1e1e1e</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:minHeight">32dp</item>
    </style>

    <style name="table_item_grid_value" parent="@style/table_item_text_base">
        <item name="android:paddingRight">5dp</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#1e1e1e</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="table_item_value_limitlength" parent="@style/table_item_value">
        <item name="android:maxLength">139</item>
    </style>

    <style name="table_item_grid_calendar_nongli">
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">#6e6e6e</item>
        <item name="android:paddingBottom">3dp</item>
        <item name="android:paddingTop">6dp</item>
    </style>

    <style name="table_item_grid_calendar_yangli">

        <!-- <item name="android:paddingBottom">3dp</item> -->
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#1e1e1e</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="table_item_text_base">
        <item name="android:minHeight">35dp</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingBottom">8dp</item>
    </style>

    <style name="edit_common_style">
        <item name="android:textColor">#000000</item>
        <item name="android:textColorHint">#e0e0e0</item>
        <item name="android:textSize">14sp</item>
        <item name="android:padding">9dp</item>
        <item name="android:maxLines">5</item>
        <item name="android:gravity">top|left</item>
        <item name="android:background">@null</item>
    </style>

</resources>