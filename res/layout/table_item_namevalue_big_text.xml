<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/table_name_txt"
        style="@style/table_item_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/table_list_line_dimen"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/table_list_line_color" />

    <TextView
        android:id="@+id/table_value_txt"
        style="@style/table_item_value"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>